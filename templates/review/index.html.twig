{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}

    <h1>Review index</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Date</th>
                <th>Summary</th>
                <th>Retailers</th>
                <th>Price</th>
                <th>Score</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.author }}</td>
                <td>{{ review.date }}</td>
                <td>{{ review.summary }}</td>
                <td>{{ review.retailers }}</td>
                <td>{{ review.price }}</td>
                <td>{{ review.score }}</td>
                <td>
                    <a href="{{ path('review_show', {'id': review.id}) }}">show</a>
                    <a href="{{ path('review_edit', {'id': review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('review_new') }}">Create new</a>

{% endblock %}